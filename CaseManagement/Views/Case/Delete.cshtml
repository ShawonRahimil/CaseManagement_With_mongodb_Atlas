@model CaseManagement.Models.Case

@{
    ViewData["Title"] = "Delete Case";
}

<h2>Delete Case</h2>

<h4>Are you sure you want to delete this case?</h4>

<div>
    <h5>@Model.CaseName</h5>
    <p><strong>Case Type:</strong> @Model.CaseType</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Filed Date:</strong> @Model.FiledDate.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CaseType" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
