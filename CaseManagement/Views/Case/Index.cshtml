@model IEnumerable<CaseManagement.Models.Case>

@{
    ViewData["Title"] = "All Cases";
}

<h3>Murder Cases (Dhaka)</h3>
@{
    var murderCases = Model.Where(c => c.CaseType.ToLower().Contains("murder")).ToList();
}
@if (!murderCases.Any())
{
    <p class="text-warning">No Murder cases found.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Case Name</th>
                <th>Case Type</th>
                 <th>Description</th>
                <th>Adalot / Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in murderCases)
            {
                <tr>
                    <td>@item.CaseName</td>
                    <td>@item.CaseType</td>
                    <td>@item.Description</td>
                    <td>Dhaka</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id" asp-route-caseType="@item.CaseType">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
