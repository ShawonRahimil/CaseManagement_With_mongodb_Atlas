@model IEnumerable<CaseManagement.Models.Case>

@{
    ViewData["Title"] = "Case List";
}

<h2>All Cases</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Case</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Case Name</th>
            <th>Case Type</th>
            <th>Description</th>
            <th>Filed Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CaseName</td>
                <td>@item.CaseType</td>
                <td>@item.Description</td>
                <td>@item.FiledDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-caseType="@item.CaseType" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-caseType="@item.CaseType" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
