@model IEnumerable<CaseManagement.Models.Adalot>

@{
    ViewData["Title"] = "All Adalots";
}

<h3>Barishal Adalots</h3>
@{
    var barishalAdalots = Model.Where(a => a.Location.ToLower() == "barishal").ToList();
}
@if (!barishalAdalots.Any())
{
    <p class="text-warning">No Barishal Adalots found.</p>
}
else
{
    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-light text-center">
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in barishalAdalots)
            {
                <tr class="text-center">
                    <td>@item.Name</td>
                    <td>@item.Location</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id" asp-route-location="@item.Location">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

