@model CaseManagement.Models.Adalot

@{
    ViewData["Title"] = "Create Adalot";
}

<h2>Create Adalot</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Location" class="control-label">Location</label>
        <select asp-for="Location" class="form-control">
            <option value="">-- Select Location --</option>
            <option value="Dhaka">Dhaka (DhakaDB)</option>
            <option value="Barishal">Barishal (BarishalDB)</option>
        </select>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
